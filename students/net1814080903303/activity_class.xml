<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context="edu.hzuapps.androidlabs.net1814080903303.ClassActivity"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:background="@drawable/class_backgroud"
    android:orientation="vertical">



    <TextView
        android:id="@+id/_textView3"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
      android:layout_marginLeft="100dp"
        android:text="@string/事假学生登记"
        android:textSize="24sp" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:layout_marginTop="15dp"
        android:background="#E2889A9C" />

    <TextView
        android:id="@+id/class_textView6"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="4dp"
        android:text="@string/填写姓名"
        android:textColorHighlight="#FFC107"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="0dp"
        android:hint="在此输入下姓名"
        android:textSize="18sp"
        android:inputType="textCapWords"/>

    <TextView
            android:id="@+id/class_textView1"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="4dp"
            android:hint="请选择课程名称："
            android:textSize="18sp"
            android:textColorHighlight="#FFC107" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_marginTop="10dp" />


    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:layout_marginTop="15dp"
        android:background="#E2889A9C" />

    <TextView
        android:id="@+id/class_textView4"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="4dp"
        android:text="@string/填写姓名"
        android:textColorHighlight="#FFC107"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="0dp"
        android:hint="在此输入下姓名"
        android:textSize="18sp"
        android:ems="10"
        android:enabled="true"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/class_textView2"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="4dp"
        android:text="@string/选择课程名称"
        android:textColorHighlight="#FFC107"
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_marginTop="10dp" />


    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:layout_marginTop="15dp"
        android:background="#E2889A9C" />

    <TextView
        android:id="@+id/class_textView5"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="4dp"
        android:text="@string/填写姓名"
        android:textColorHighlight="#FFC107"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="0dp"
        android:hint="在此输入下姓名"
        android:textSize="18sp"
        android:ems="10"
        android:enabled="true"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/class_textView3"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="4dp"
        android:text="@string/选择课程名称"
        android:textColorHighlight="#FFC107"
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/spinner3"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/stu_button2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:onClick="setview"
        android:text="@string/保存" />

    <Button
        android:id="@+id/class_button1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="0dp"
        android:onClick="backview"
        android:text="@string/撤销" />

    <Button
        android:id="@+id/class_button3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="0dp"
        android:onClick="delect"
        android:text="重置" />
</LinearLayout>