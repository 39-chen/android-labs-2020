<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.hzuapps.androidlabs.net1814080903105.CommodityInfoActivity">

    <TextView
        android:id="@+id/commodity_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="@string/commodity_info"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/commodity_picture"
        android:layout_width="512px"
        android:layout_height="512px"
        android:layout_below="@+id/commodity_title"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/commodity_name"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="25sp"
        android:layout_below="@+id/commodity_picture"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/commodity_series"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="25sp"
        android:layout_below="@+id/commodity_name"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="25sp"
        android:text="@string/commodity_name"
        android:layout_below="@+id/commodity_picture"
        android:layout_toLeftOf="@id/commodity_name"
        android:layout_alignParentLeft="true"
        />

    <TextView
        android:id="@+id/series"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="25sp"
        android:text="@string/commodity_series"
        android:layout_below="@+id/commodity_name"
        android:layout_toLeftOf="@id/commodity_series"
        android:layout_alignParentLeft="true"
        />

    <Button
        android:id="@+id/button_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_shopping_cart"
        android:layout_below="@+id/commodity_series"
        android:layout_alignParentLeft="true"/>

    <Button
        android:id="@+id/button_shopping1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/shopping_cart"
        android:layout_below="@+id/commodity_series"
        android:layout_alignParentRight="true"/>

</RelativeLayout>