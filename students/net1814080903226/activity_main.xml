<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Net1814080903226Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/r"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/hzu_logo"
            android:background="@color/colorAccent"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:layout_marginBottom="20dp"
            />

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:orientation="horizontal"
            android:layout_marginBottom="20sp"
            android:layout_alignBottom="@+id/imageView"
            >

            <Button
                android:id="@+id/index"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="left"
                android:text="首页"
                android:background="@drawable/addborder"
                android:textColor="@drawable/buttonstatus"
                android:layout_marginRight="10dp"/>
            <Button
                android:id="@+id/friendcircle"
                android:layout_weight="1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="朋友圈"
                android:background="@drawable/addborder"
                android:textColor="@drawable/buttonstatus"
                android:layout_marginRight="10dp"/>
            <Button
                android:id="@+id/talkingarea"
                android:layout_weight="1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="讨论区"
                android:background="@drawable/addborder"
                android:textColor="@drawable/buttonstatus"
                android:layout_marginRight="10dp"/>
            <Button
                android:id="@+id/scan"
                android:layout_weight="1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="扫码"
                android:background="@drawable/addborder"
                android:textColor="@drawable/buttonstatus"/>

        </LinearLayout>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/vp"
            android:layout_width="match_parent"
            android:layout_height="363dp"
            android:layout_alignBottom="@+id/linear1"
            android:layout_gravity="center"></androidx.viewpager.widget.ViewPager>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20sp"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <Button
                android:id="@+id/myview"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@drawable/addborder"
                android:text="我的"
                android:textColor="@drawable/buttonstatus" />

            <Button
                android:id="@+id/message"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@drawable/addborder"
                android:text="消息"
                android:textColor="@drawable/buttonstatus" />

            <Button
                android:id="@+id/campusfunction"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@drawable/addborder"
                android:text="校园功能"
                android:textColor="@drawable/buttonstatus" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>