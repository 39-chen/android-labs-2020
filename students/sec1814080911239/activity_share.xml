<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShareActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        >

        <Button
            android:id="@+id/solve"
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/solve" />

        <Button
            android:id="@+id/share"
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:layout_toLeftOf="@id/solve"
            android:layout_alignTop="@id/solve"
            android:background="@drawable/share" />

        <Button
            android:id="@+id/knowledge"
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:layout_toLeftOf="@id/share"
            android:layout_alignTop="@id/share"
            android:background="@drawable/knowledge" />

        <Button
            android:id="@+id/first"
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:layout_toLeftOf="@id/knowledge"
            android:layout_alignTop="@id/knowledge"
            android:background="@drawable/first" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_marginTop="280dp">

        <Button
            android:id="@+id/download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="click"
            android:text="下载图片" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/download"
            android:layout_marginBottom="-30dp"
            android:text="@string/text" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
       >
        <Button
            android:id="@+id/text_button"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/issue" />
    </RelativeLayout>


    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="263dp" />



</RelativeLayout>
