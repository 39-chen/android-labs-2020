        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="370dp">
    </Button>

    <Button
        android:id="@+id/P_icture"
        android:layout_width="310dp"
        android:layout_height="70dp"
        android:layout_marginTop="470dp"
