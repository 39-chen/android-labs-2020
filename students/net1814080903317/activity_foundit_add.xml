<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp">
        <ImageView
            android:id="@+id/foundit_add_back_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/back"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="发布页面"
            android:textSize="20sp"
            android:textColor="@android:color/holo_orange_light"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"/>
        <TextView
            android:id="@+id/foundit_add_public_tv"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="5dp"
            android:text="发布"
            android:textSize="18sp"
            android:textColor="@android:color/holo_green_light"
            android:background="@drawable/shape_foundit_public"
            android:gravity="center"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="5dp">
        <TextView
            android:id="@+id/foundit_add_title_tv"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="标题:"
            android:textColor="@android:color/darker_gray"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:gravity="center"/>
        <EditText
            android:id="@+id/foundit_add_title_et"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/foundit_add_title_tv"
            android:ellipsize="end"
            android:background="@drawable/shape_foundit_public"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <!--内容描述-->

    <EditText
        android:id="@+id/foundit_add_content_et"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="12dp"
        android:text="内容描述:"
        android:padding="5dp"
        android:ellipsize="end"
        android:textSize="16sp"
        android:textColor="@android:color/holo_red_dark"
        android:background="@drawable/shape_foundit_public"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="5dp">
        <ImageView
            android:id="@+id/foundit_add_takephoto_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/camera"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="拍照"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"
            android:layout_toRightOf="@+id/foundit_add_takephoto_iv"
            android:layout_marginLeft="8dp"
            android:gravity="center"
            />
        <ImageView
            android:id="@+id/foundit_add_photogallery_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/photo"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="从图库中取"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"
            android:layout_toLeftOf="@+id/foundit_add_photogallery_iv"
            android:layout_marginLeft="8dp"
            android:gravity="center"
            />
    </RelativeLayout>

    <ImageView
        android:id="@+id/foundit_add_showtakephoto_iv"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:visibility="gone"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/foundit_add_picshow_recyclerview"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:visibility="gone"

        />

</LinearLayout>